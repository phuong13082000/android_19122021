<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="164dp"
        android:layout_height="176dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:text="Tên"
        android:textColor="#ff00"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewLoai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:text="Phòng Ban:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textviewLoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textviewLoai1"
        android:text="@string/type"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/textviewSDT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewLoai"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:text="SĐT: "
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textviewSDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewLoai"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textviewSDT1"
        android:text="SDT"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/textviewLuong1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewSDT"
        android:layout_alignBottom="@+id/imageviewHinh"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/imageviewHinh"
        android:text="Luong"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textviewLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewSDT"
        android:layout_alignBottom="@+id/imageviewHinh"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/textviewLuong1"
        android:text="Luong"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>
